<h2>Todo List</h2>
<p>Add an item</p>
<%- include ('./partials/form_todo') %> 
<%- include ('./partials/error') %> 

<% if (todoList.length > 0) {%>
<% todoList.forEach((todo) => { %>
<div class="border-bottom p-2 d-flex align-item-center">
  <input id="check" type="checkbox" class="form-check-input mx-3" >
  <label for="check" style="flex-basis: 90%; font-size: 20px">
    <%= todo.content %>
  </label>
  <a href="/todos/edit/<%=todo._id %>?_method=PUT"class="btn btn-success mx1-">
    <i class="fas fa-edit"></i>
  </a>
  <a href="/todos/<%=todo._id %>?_method=DELETE" class="btn btn-danger mx-1" >
    <i class="fas fa-trash-alt"></i>
  </a>
</div>
<% }) } else { %>
  <p class="text-center">Không có todo để hiển thị</p>
<% }%>


